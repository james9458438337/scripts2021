
#innobackupex backup with backup achive management
#"xtrabackup_full.sh" in /scripts

docker create --name percona-innobackupex-incremental-2.4 \
-v /backup:/backup -v /scripts:/scripts --volumes-from mysql \
--network docker-compose_default \
percona/percona-xtrabackup:2.4  \
bash /scripts/xtrabackup_incremental.sh

docker start -ai percona-innobackupex-incremental-2.4



#OR

docker run --rm=true --name percona-innobackupex-incremental-2.4 \
-v /backup:/backup -v /scripts:/scripts --volumes-from mysql \
--network docker-compose_default \
percona/percona-xtrabackup:2.4  \
bash /scripts/xtrabackup_incremental.sh